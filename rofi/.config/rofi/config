rofi.font:                           DejaVu Sans Mono 11
rofi.width:                          40
rofi.lines:                          10
rofi.terminal:                       termite
rofi.matching:                       fuzzy

! Use focussed monitor for displaying rofi
rofi.m:                              -1

! Commands should be wrapped in quotes and kept open
rofi.ssh-command:                    {terminal} -e "{ssh-client} {host}"
rofi.run-shell-command:              {terminal} -e "{cmd}"

! Scroll from centre not by page
rofi.scroll-method:                  1

! Remove ctrl+j from accept list
rofi.kb-accept-entry:                Return,KP_Enter

! Remove ctrl+k from delete list
rofi.kb-remove-to-eol:

! Use ctrl+j and ctrl+k for scrolling
rofi.kb-row-up:                      Up,Control+p,Control+k
rofi.kb-row-down:                    Down,Control+n,Control+j

! Two distinct modes
rofi.combi-modi:                     window,drun
rofi.modi:                           run,ssh

! Use better display names in combi mode
rofi.display-combi:                  Applications
rofi.display-drun:                   App:
rofi.display-window:                 Window:
