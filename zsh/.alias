# Use nvim by default
alias vi='nvim'

# neovim handle running from inside neovim terminal
# (needs vim plugin neovim-remote)
vim() {
	if [[ -z $NVIM_LISTEN_ADDRESS ]]; then
		# not running inside nvim
		nvim "$@"
	else
		nvr "$@"
	fi
}

# Listing
alias ls='ls -G'
alias la='ls -Ahl'

# Ranger
alias r='ranger'

# Bookmarks
alias j='jump'

# Silverstripe
alias ssb='sake dev/build "flush=1"'

# IP address
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"

# Arch only
if [[ `uname` == 'Linux' ]]; then
	# Pacman
	alias update='pacaur -Syu'

	orphans() {
	  if [[ ! -n $(pacman -Qdt) ]]; then
		echo "No orphans to remove."
	  else
		sudo pacman -Rns $(pacman -Qdtq)
	  fi
	}

	# Wifi
	alias wifi='sudo netctl switch-to'
fi

# OSX only
if [[ `uname` == 'Darwin' ]]; then
	# OSX update
	alias update='sudo softwareupdate -i -a; brew update; brew upgrade'
fi

# Docker
# Delete all containers
alias dc='sudo docker rm $(sudo docker ps -a -q)'

# Git
alias g='git'
