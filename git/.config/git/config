[user]
  # Ask per user/email for each repo
  useConfigOnly = true

[core]
  # Handle line endings
  autocrlf = input

[rebase]
  autosquash = true

[credential]
  helper = osxkeychain

[difftool]
  prompt = false

[diff]
  tool = vimdiff

[mergetool]
  keepBackup = false

[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[merge]
  # Include summaries of merged commits in newly created merge commit messages
  log = true
  tool = vimdiff
  conflictstyle = diff3

[alias]
  a = add
  b = branch
  c = commit -m
  co = checkout
  cf = commit --amend --reuse-message HEAD
  cF = commit --verbose --amend
  d = diff
  g = grep -n
  l = "log --topo-order --pretty=format:'%C(auto)%h %s%n%C(cyan)(%ar by %an)%C(auto)%d%n'"
  lg = "log --topo-order --all --graph --simplify-by-decoration --pretty=format:'%C(auto)%h %s%d'"
  m = merge
  mt = mergetool
  p = push
  s = status -s
  sl = status
  standup = shortlog --since=yesterday

[color "branch"]
  current = magenta bold
  local = magenta
  remote = green
  upstream = green reverse

[color "diff"]
  commit = blue
  meta = cyan bold
  frag = magenta
  old = red
  new = green

[color "decorate"]
  branch = magenta
  HEAD = yellow
  stash = magenta reverse
  remoteBranch = green
  tag = red

[color "grep"]
  filename = cyan
  linenumber = blue
  match = red

[color "status"]
  added = green
  changed = yellow
  untracked = red
