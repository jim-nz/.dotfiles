# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod 

# Font for window titles. Will also be used by the bar unless a different font
#font -xos4-terminus-medium-r-*-*-14-*
font pango:Dejavu Sans 9

new_window pixel 2
new_float normal

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 in place (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# kill focused window
bindsym $mod+q kill

# lock screen
bindsym $mod+Escape exec --no-startup-id i3lock -n -c 000000 -i ~/.lockscreen.jpg

# switch or start application
bindsym $mod+space exec --no-startup-id rofi -show combi

# start a terminal command
bindsym $mod+Return exec --no-startup-id termite

# Make the currently focused window a scratchpad
bindsym $mod+Shift+semicolon move scratchpad
# Show the first scratcHpad window
bindsym $mod+semicolon scratchpad show

# start clipmenu
bindsym $mod+v exec --no-startup-id clipmenu -p "search clipboard:"

# Move the current workspace to the next output
# (effectively toggles when you only have two outputs)
bindsym $mod+x move workspace to output right

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# vertical split (i3 calls this h)
bindsym $mod+bar split h

# horizontal split (i3 calls this v)
bindsym $mod+minus split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout
bindsym $mod+t layout tabbed
bindsym $mod+s layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+Tab floating toggle

# change focus between tiling / floating windows
bindsym $mod+Tab focus mode_toggle

# focus the parent container
bindsym $mod+p focus parent

# focus the child container
bindsym $mod+c focus child

# screenshot
bindsym --release Print exec --no-startup-id scrot -s

# switch to workspace
bindsym $mod+grave workspace 0
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9

# move with focused container to workspace
bindsym $mod+Shift+grave move container to workspace 0; workspace 0
bindsym $mod+Shift+1 move container to workspace 1; workspace 1
bindsym $mod+Shift+2 move container to workspace 2; workspace 2
bindsym $mod+Shift+3 move container to workspace 3; workspace 3
bindsym $mod+Shift+4 move container to workspace 4; workspace 4
bindsym $mod+Shift+5 move container to workspace 5; workspace 5
bindsym $mod+Shift+6 move container to workspace 6; workspace 6
bindsym $mod+Shift+7 move container to workspace 7; workspace 7
bindsym $mod+Shift+8 move container to workspace 8; workspace 8
bindsym $mod+Shift+9 move container to workspace 9; workspace 9

# resize
bindsym $mod+Left resize shrink width 10 px or 10 ppt
bindsym $mod+Down resize grow height 10 px or 10 ppt
bindsym $mod+Up resize shrink height 10 px or 10 ppt
bindsym $mod+Right resize grow width 10 px or 10 ppt

# quick switch workspace
bindsym $mod+o workspace next_on_output
bindsym $mod+i workspace prev_on_output

# tomorrow colours (except blue)
set $red    #cc6666
set $green  #b5bd68
set $yellow #f0c674
set $purple #b294bb
set $cyan   #8abeb7
set $orange #de935f

set $blue   #81a2be

set $black  #1d1f21
set $dgrey  #373b41
set $grey   #969896
set $lgrey  #b4b7b4
set $white  #e0e0e0

                          # border     background  text
client.focused              $blue      $blue       $black
client.unfocused            $black     $dgrey      $lgrey
client.focused_inactive     $grey      $grey       $black
client.urgent               $purple    $purple     $white

# Start polybar
exec_always --no-startup-id polybar-reload

#bindsym $mod+\ mode "example"
#mode "example" {
        #bindsym a exec something; mode "default"
        #bindsym Escape mode "default"
#}

# Bind re-run automatic scripts
bindsym $mod+m exec --no-startup-id autorun-scripts

# Bind HDMI sound toggle
bindsym $mod+a exec --no-startup-id hdmi-sound

# Bind bluetooth tether
#bindsym $mod+b exec bt-nic-nexus4

# Make Chrome pop-ups (hangouts etc.) float
for_window [window_role="pop-up"] floating enable

# Autostart
exec --no-startup-id set-wallpaper
